<!doctype html>

<html>

<head>
	<title>Roommate App</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
	<!-- Load an icon library -->
	<script src="https://kit.fontawesome.com/1caf25f8cc.js" crossorigin="anonymous"></script>

	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
	
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.standalone.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

	<!-- <link rel="stylesheet" href="./css/roommateapp.css"> -->
	<!-- this is a comment in HTML -->

<body>
	<div class="container">
		<!-- Navbar -->
		<nav class="navbar bg-light justify-content-center">
			<h2>Reserve Appliance</h3>
		</nav>
		<!--/. Navbar -->

		<!-- Content -->
		<div class="card bg-light mx-auto border-dark main-content text-center" style="max-width: 35rem;" id="">
			<!-- WHO -->
			<div class="card-header">
				<h3>Who?</h3>
			</div>
			<div class="card-body text-center people">
				<div class="row row-cols-2 mb-4">
					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Jessie">Jessie</button>
					</div>

					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Christine">Christine</button>
					</div>
				</div>

				<div class="row row-cols-2">
					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Yuhan">Yuhan</button>
					</div>
				</div>
			</div>
			<!-- APPLIANCE -->
			<div class="card-header">
				<h3>Appliance?</h3>
			</div>
			<div class="card-body text-center chore">
				<div class="row row-cols-2 mb-4">
					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Stove">Stove</button>
					</div>

					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="TV">TV</button>
					</div>
				</div>

				<div class="row row-cols-2">
					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Washer">Washer</button>
					</div>

					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Dryer">Dryer</button>
					</div>
				</div>
			</div>
			<!-- WHAT -->
			<div class="card-header">
				<h3>What?</h3>
			</div>
			<div class="card-body text-center">
				<!-- DATE INPUT -->
				<div class="input-group mb-4">
					<div class="input-group-prepend">
						<div class="input-group-text">Date</div>
					</div>
					<input class="date form-control" id="inputDate" data-provide="datepicker" placeholder="YYYY-MM-DD"
						data-date-format="yyyy-mm-dd">
				</div>
				<!-- TIME INPUT -->
				<div class="input-group mb-4">
					<div class="input-group-prepend">
						<div class="input-group-text">Time</div>
					</div>
					<input class="date form-control" id="inputTime" data-provide="datepicker" placeholder="YYYY-MM-DD"
						data-date-format="yyyy-mm-dd">
				</div>
				<!-- SUBMIT -->
				<div class="submit">
					<button type="button" class="btn btn-primary btn-lg">Done</button>
				</div>
			</div>
		</div>

		<nav class="navbar bg-light justify-content-center">
			<a class="nav-item nav-link fa-3x" href="/calendar">
				<i class="fas fa-chevron-left"></i>
				<i class="fas fa-calendar-day"></i>
			</a>
		</nav>
	</div>



	<script>
		var description = "";
		var name = "";
		var date= "";

		$(".main-content .people .btn-primary").click(function(e){
			e.preventDefault();
			name = this.id;
			console.log("name "+description);
			$(".main-content .people .btn-success").removeClass("btn-success");
			this.classList.add("btn-success");
		});

		$(".main-content .chore .btn-primary").click(function(e){
			e.preventDefault();
			description = this.id;
			console.log("chore "+description);

			$(".main-content .chore .btn-success").removeClass("btn-success");

			this.classList.add("btn-success");
		});

		$(".main-content .submit .btn-primary").click(function(e){
			e.preventDefault();
			date = $(".main-content .date").val();
			if (date==""){
				$(".dateform h2").css('color', 'red');
				this.classList.add("btn-danger");
				return;
			}
			description = "Reserved " + description + " "+ $(".main-content .time").val();
			console.log("date "+date);
			this.classList.add("btn-success");
			var color = "";
			if (name == "Jessie")
				color = "Purple";
			if (name == "Christine")
				color = "Blue";
			if (name == "Yuhan")
				color = "Red";
			window.location.href = '/addchore?color='+color+'&description='+description+'&date='+date;
		});



	</script>
</body>

</html>