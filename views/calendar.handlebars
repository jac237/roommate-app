<!doctype html>

<html>

<head>
	<title>Roommate App</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
	<!-- Load an icon library -->
	<script src="https://kit.fontawesome.com/1caf25f8cc.js" crossorigin="anonymous"></script>


	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js"></script>
	
	<link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/daygrid/main.min.css" rel="stylesheet">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/daygrid/main.min.js"></script>

	<link rel="stylesheet" href="/css/calendar.css">
	<script type="text/javascript">
		document.addEventListener('DOMContentLoaded', function() {
		var calendarEl = document.getElementById('calendar');

		var calendar = new FullCalendar.Calendar(calendarEl, {
			plugins: ['dayGrid'],
			events: [
			{{#each calendar}}
				{
      				title: "{{description}}",
      				start: "{{date}}",
      				backgroundColor: "{{color}}"
				},
			{{/each}}
			]
		});

		calendar.render();
		});
	</script>

	<!-- <link rel="stylesheet" href="./css/roommateapp.css"> -->
	<!-- this is a comment in HTML -->

<body>
	<div class="container">
		<!-- Navbar -->
		<nav class="navbar bg-light justify-content-center flex-column">
			<ul class="nav nav-pills">
				<li class="nav-item">
					<a class="nav-link" href="/home">
						<i class="fas fa-home"></i>
						Home
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link active" href="/calendar">
						<i class="fas fa-calendar-day"></i>
						Calendar
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/rules">
						<i class="fas fa-clipboard-list"></i>
						House Rules
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/finance">
						<i class="fas fa-dollar-sign"></i>
						Finance
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/settings">
						<i class="fas fa-cog"></i>
						Settings
					</a>
				</li>
			</ul>
			<!-- App name header -->
			<nav class="navbar sticky-top">
				<h3>The Roommate App</h3>
			</nav>
		</nav>
		<!--/. Navbar -->
		<br>
		<!-- Content -->
		<div id='calendar'></div>
		<br>
		<div class="text-center">
			<button class="btn btn-primary" onclick="window.location.href = '/chores';" type="button">Assign Chore</button>
			<button class="btn btn-primary" onclick="window.location.href = '/appliance';" type="button">Reserve Appliance</button>
		</div>

	</div>

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>

</html>