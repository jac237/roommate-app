<!doctype html>

<html>

<head>
	<title>Roommate App</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
	<!-- Load an icon library -->
	<script src="https://kit.fontawesome.com/1caf25f8cc.js" crossorigin="anonymous"></script>

	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

	<link rel="stylesheet"
		href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
	<link rel="stylesheet"
		href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.standalone.min.css">
	<script
		src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

	<!-- <link rel="stylesheet" href="./css/roommateapp.css"> -->
	<!-- this is a comment in HTML -->

<body>
	<div class="container">
		<!-- Navbar -->
		<nav class="navbar bg-light justify-content-center">
			<a class="nav-item nav-link fa-2x" href="/calendar">
				<i class="fas fa-chevron-left"></i>
				<i class="fas fa-calendar-day"></i>
			</a>
		</nav>
		<!--/. Navbar -->

		<!-- Content -->
		<div class="card bg-light mx-auto border-dark main-content m-4" style="max-width: 35rem;" id="">
			<!-- WHO -->
			<div class="card-header">
				<h3>Who?</h3>
			</div>
			<div class="card-body text-center people">
				<div class="row row-cols-2 mb-4">
					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Jessie">Jessie</button>
					</div>

					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Christine">Christine</button>
					</div>
				</div>

				<div class="row row-cols-2">
					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Yuhan">Yuhan</button>
					</div>
				</div>
			</div>
			<!-- CHORE -->
			<div class="card-header">
				<h3>Chore?</h3>
			</div>
			<div class="card-body text-center chore">
				<div class="row row-cols-2 mb-4">
					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Trash">Trash</button>
					</div>

					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Dishes">Dishes</button>
					</div>
				</div>

				<div class="row row-cols-2">
					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Cleaning">Cleaning</button>
					</div>

					<div class="col">
						<button type="button" class="btn btn-primary btn-lg" id="Supplies">Supplies</button>
					</div>
				</div>
			</div>
			<!-- WHEN -->
			<div class="card-header">
				<h3>When?</h3>
			</div>
			<div class="card-body text-center chore">
				<div class="input-group mb-4">
					<div class="input-group-prepend">
						<div class="input-group-text">Date</div>
					</div>
					<input class="date form-control" id="inputDate" data-provide="datepicker" placeholder="YYYY-MM-DD"
						data-date-format="yyyy-mm-dd">
				</div>
				<div class="submit">
					<button type="button" class="btn btn-primary btn-lg">Done</button>
				</div>
			</div>
		</div>
	</div>

	<script>
		var description = ""
		var name = ""
		var date = ""
		$(".main-content .chore .btn-primary").click(function (e) {
			e.preventDefault();
			description = this.id;
			console.log("chore " + description)

			$(".main-content .chore .btn-success").removeClass("btn-success")

			this.classList.add("btn-success")
		});
		$(".main-content .people .btn-primary").click(function (e) {
			e.preventDefault();
			name = this.id;
			console.log("name " + description)
			$(".main-content .people .btn-success").removeClass("btn-success")
			this.classList.add("btn-success")
		});

		$(".main-content .submit .btn-primary").click(function (e) {
			e.preventDefault();
			date = $(".main-content .date").val()
			console.log("date " + date)
			if (date == "") {
				$(".dateform h2").css('color', 'red');
				this.classList.add("btn-danger")
				return
			}
			color = ""
			if (name == "Jessie")
				color = "Purple";
			if (name == "Christine")
				color = "Blue";
			if (name == "Yuhan")
				color = "Red"
			window.location.href = '/addchore?color=' + color + '&description=' + description + '&date=' + date;
		});



	</script>
</body>

</html>